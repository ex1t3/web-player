<script>
  $('#check').click(function() {
      $.ajax({
        type: 'GET',
        url: '/api/values',
        headers: {
          Authorization: //він завжди має бути, щоб сервер з атрибутом ауторайз дав доступ
            'Bearer ' + sessionStorage.getItem('access_token')
    },
      success: function(e) {
        console.log(e);
      }
    });
  });
  $('#login').click(function() {
    var loginData = {
      Username: "test",
      Password: "1234"
    };
    $.ajax({
      type: 'POST',
      url: '/api/Account/Login',
      contentType: "application/json; charset=utf-8",
      dataType:"json",
      data: JSON.stringify(loginData),
      success: function(e) {
        sessionStorage.setItem('access_token', e.access_token);
      }
    });
  });
  $('#token').click(function() {
    var loginData = {
      grant_type: "password",
      Username: "test",
      Password: "1234"
    };
    $.ajax({
      type: 'POST',
      url: '/Token',
      data: loginData,
      success: function(e) {
        sessionStorage.setItem('access_token', e.access_token);
      }
    });
  });
  $('#logout').click(function () {
    $.ajax({
      type: 'POST',
      url: '/api/Account/Logout',
      headers: {Authorization: "Bearer " + sessionStorage.getItem('access_token')},
      success: function(e) {
        console.log(e);
      }
    });
  });
  $('#register').click(function() {
    var loginData = {
      Username: "test",
      Password: "1234"
    };
    $.ajax({
      type: 'POST',
      url: '/api/Account/Register',
      contentType: "application/json; charset=utf-8",
      dataType:"json",
      data: JSON.stringify(loginData),
      success: function(e) {
        sessionStorage.setItem('access_token', e.access_token);
      }
    });
  });
  $('#external').click(function () {
    $.ajax({
      type: "GET",
      url: '/api/Account/ExternalLogins?returnUrl=%2F&generateState=true',
      success: function(e) {
        if (e.length > 0) {
          window.location = e[0].url;
        }
      }
    });
  });
</script>
